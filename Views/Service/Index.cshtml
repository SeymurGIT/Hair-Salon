@model List<Service>
@{
	ViewData["Title"] = "Xidmət əlavə et";
	Layout = "~/Views/Shared/_Layout.cshtml";
}
<style scoped>
	img {
		height: 300px;
		width: 300px;
	}

	#service-price {
		font-size: 35px;
	}
</style>
<div class="page-header">
	<div class="container">
		<div class="row">
			<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
				<div class="page-caption">
					<h2 class="page-title">Bizimlə Əlaqə</h2>
					<div class="page-breadcrumb">
						<ol class="breadcrumb">
							<li><a asp-controller="Home" asp-action="Index">Əsas Səhifə</a></li>
							<li class="active">Xidmətlər</li>
						</ol>
					</div>
				</div>
			</div>
		</div>
	</div>
</div><!-- /.page header -->
<div class="content">
	<div class="container">
		<div class="row">
			@foreach (var service in Model)
			{
				if (service.ServiceImageLink != null)
				{
					<div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
						<div class="service-block">
							<div class="service-icon mb20">
								<img src="@service.ServiceImageLink" alt="">
							</div>
							<div class="service-content">
								<h2><a href="@Url.Action("Index", "Booking", new { serviceName = service.ServiceName })" class="title">@service.ServiceName</a></h2>
								<p>
									@service.ServiceDescription
								</p>
								<div style="margin-right:10px; " id="service-price" class="price">₼@service.ServicePrice</div>
							</div>

						</div>

					</div>
				}
			}
			}
		</div>

		<section id="pricing" class="pricing-content section-padding">
			<div class="container">
				<div class="section-title text-center">
					<h1>Xüsusi Setlərimiz</h1>
					<p>
						Sizin üçün müxtəlif eyni zamanda  müxtəlif xidmətlərdən ibarət xüsusi paketlərimiz var
					</p>
				</div>
				<br />
				<br />
				<div class="row text-center">
					@foreach (var sets in Model)
					{
						if (sets.ServiceImageLink == null)
						{
							<div class="col-lg-4 col-sm-4 col-xs-12 wow fadeInUp" data-wow-duration="1s" data-wow-delay="0.1s"
								 data-wow-offset="0">
								<div class="single-pricing">
									<div class="price-head">
										<h2>Toy Seti</h2>
										<span></span>
										<span></span>
										<span></span>
										<span></span>
										<span></span>
										<span></span>
									</div>
									<h1 class="price">₼@sets.ServicePrice</h1>
									<h5>Tək Baxım</h5>
									<ul>
										<li>Saçın möhtəşəm formada kəsimi</li>
										<li>Saqqalın möhtəşəm formada kəsimi</li>
										<li>Müxtəlif kremlər</li>
										<li>Üz parıldadan tozlardan istifadə</li>
										<li></li>
									</ul>
									<a href="@Url.Action("Index", "Booking", new { serviceName = sets.ServiceName })" class="title">Rezerv Edin</a>
								</div>
							</div>
							<div class="col-lg-4 col-sm-4 col-xs-12 wow fadeInUp" data-wow-duration="1s" data-wow-delay="0.2s"
								 data-wow-offset="0">
								<div class="single-pricing">
									<div class="price-head">
										<h2>Möhtəşəm</h2>
										<span></span>
										<span></span>
										<span></span>
										<span></span>    
										<span></span>
									    </div>
										<span></span>
									<h1 class="price">₼90</h1>
									<h5>Tək Baxım</h5>
									<ul>
										<li>10 website</li>
										<li>50GB Disk Space</li>
										<li>50 Email Accounts</li>
										<li>50GB Monthly Bandwidth</li>
										<li>10 Subdomains</li>
									</ul>
									<a href="#">Rezerv Edin</a>
								</div>
							</div>

							<div class="col-lg-4 col-sm-4 col-xs-12 wow fadeInUp" data-wow-duration="1s" data-wow-delay="0.3s"
								 data-wow-offset="0">
								<div class="single-pricing single-pricing-white">
									<div class="price-head">
										<h2>Zümrüd Stil</h2>
										<span></span>
										<span></span>
										<span></span>
										<span></span>
										<span></span>
										<span></span>
									</div>
									<span class="price-label">Ən yaxşı</span>
									<h1 class="price">₼150</h1>
									<h5>Təkrar Baxım</h5>
									<ul>
										<li>15 website</li>
										<li>50GB Disk Space</li>
										<li>50 Email Accounts</li>
										<li>50GB Monthly Bandwidth</li>
										<li>10 Subdomains</li>
										<li>15 Domains</li>
										<li>Unlimited Support</li>
									</ul>
									<a href="#">Rezerv Edin</a>
								</div>
							</div>
						}
					}
				</div>
			</div>

		</section>
	</div>
</div>
@await Html.PartialAsync("_footer") 
<style scoped>

	

	.single-pricing {
		background: #fff;
		padding: 40px 20px;
		border-radius: 5px;
		position: relative;
		z-index: 2;
		border: 1px solid #eee;
		box-shadow: 0 10px 40px -10px rgba(0, 64, 128, .09);
		transition: 0.3s;
	}

	@@media only screen and (max-width:480px) {
		.single-pricing {
			margin-bottom: 30px;
		}
	}

