@model ReportsViewModel 
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout2.cshtml";
	var today = DateTime.Today;
}
<div id="page-wrapper">
	<div class="main-page">
		<div class="forms">
			<h3 class="title1">Tarixlər Arası Hesabatlar</h3>
			<div class="form-grids row widget-shadow" data-example-id="basic-forms">
				<div class="form-title">
					<h4>Hesabat</h4>
				</div>
				<div class="form-body">
					<form method="post" name="bwdatesreport" asp-action="GenerateReport" asp-controller="Reports" enctype="multipart/form-data">
						<p style="font-size:16px; color:red" align="center"> </p>


						<div class="form-group"> 
						<label asp-for="FromDate">Bu Tarixdən</label> 
						<input type="date" class="form-control1" asp-for="FromDate" required> 
						</div>
						<div class="form-group"> 
						<label asp-for="ToDate">Bu Tarixə</label>
						<input type="date" class="form-control1" asp-for="ToDate" required> 
						</div>



						<button type="submit" class="btn btn-default">Axtar</button>
					</form>
				</div>

			</div>


		</div>
	</div>

</div>

