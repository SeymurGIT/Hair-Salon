@model RegisterViewModel
<div class="alert-section">
	@if (TempData["message"] != null)
	{
		<div class="alert alert-warning">
			@TempData["message"]
		</div>
	}
</div>
<!doctype html>
<html lang="az">
<head>
	<title>Qeydiyyat Formu</title>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

	<link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">

	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
	<link rel="stylesheet" href="/User/css/login-style.css" />
	<style>
		span {
			color: red;
			font-size: 13px;
		}
		body {
			overflow: hidden;
			background-image: url(/User/images/download2.png);
			background-size: cover;
			background-position: center;
			margin: 0;
			padding: 0;
		}
			body::before {
				content: "";
				position: absolute;
				top: 0;
				right: 0;
				bottom: 0;
				left: 0;
				background-color: rgba(0, 0, 0, 0.5); 
			}
		body,
		html {
			height: 100%;
			margin: 0;
		}

		.ftco-section {
			display: flex;
			justify-content: center;
			align-items: center;
			height: 100%;
		}
		.login-wrap {
			display: inline-block;
			
			padding: 20px;
			background-color: #fff;
		}
		h3,
		label,
		.btn {
			min-width: 120px;
			
		}
		.text-md-right a:hover {
			
			color: red; 
			
		}
		.signin-form .submit:hover {
			
			background-color: #555; 
			color: #fff; 
		}
		.alert-section {
			position: absolute;
			top: 0;
			width: 100%;
			z-index: 9999;
			text-align: center;
		}
		.alert {
			margin-bottom: 0; 
		}
		.close-btn {
			position: absolute;
			top: 20px; 
			right: 30px; 
			background: none;
			border: none;
			cursor: pointer;
			z-index: 3; 
		}

		button.close-btn svg {
			width: 70px; 
			height: 70px; 
			color: white;
		}
	</style>
</head>
<body>
	<form asp-controller="Home" asp-action="Index">
		<button title="Close" class="close-btn">
			<svg width="70px" height="70px" viewBox="0 0 30 30" fill="none" xmlns="http://www.w3.org/2000/svg">
				<path d="M8.71146 8.71146C8.79855 8.62415 8.902 8.55489 9.0159 8.50762C9.12979 8.46036 9.2519 8.43604 9.37521 8.43604C9.49852 8.43604 9.62063 8.46036 9.73452 8.50762C9.84842 8.55489 9.95188 8.62415 10.039 8.71146L15.0002 13.6746L19.9615 8.71146C20.0486 8.6243 20.1521 8.55515 20.266 8.50798C20.3799 8.46081 20.5019 8.43653 20.6252 8.43653C20.7485 8.43653 20.8705 8.46081 20.9844 8.50798C21.0983 8.55515 21.2018 8.6243 21.289 8.71146C21.3761 8.79863 21.4453 8.9021 21.4924 9.01599C21.5396 9.12988 21.5639 9.25194 21.5639 9.37521C21.5639 9.49848 21.5396 9.62054 21.4924 9.73443C21.4453 9.84832 21.3761 9.9518 21.289 10.039L16.3258 15.0002L21.289 19.9615C21.3761 20.0486 21.4453 20.1521 21.4924 20.266C21.5396 20.3799 21.5639 20.5019 21.5639 20.6252C21.5639 20.7485 21.5396 20.8705 21.4924 20.9844C21.4453 21.0983 21.3761 21.2018 21.289 21.289C21.2018 21.3761 21.0983 21.4453 20.9844 21.4924C20.8705 21.5396 20.7485 21.5639 20.6252 21.5639C20.5019 21.5639 20.3799 21.5396 20.266 21.4924C20.1521 21.4453 20.0486 21.3761 19.9615 21.289L15.0002 16.3258L10.039 21.289C9.9518 21.3761 9.84832 21.4453 9.73443 21.4924C9.62054 21.5396 9.49848 21.5639 9.37521 21.5639C9.25194 21.5639 9.12988 21.5396 9.01599 21.4924C8.9021 21.4453 8.79863 21.3761 8.71146 21.289C8.6243 21.2018 8.55515 21.0983 8.50798 20.9844C8.46081 20.8705 8.43653 20.7485 8.43653 20.6252C8.43653 20.5019 8.46081 20.3799 8.50798 20.266C8.55515 20.1521 8.6243 20.0486 8.71146 19.9615L13.6746 15.0002L8.71146 10.039C8.62415 9.95188 8.55489 9.84842 8.50762 9.73452C8.46036 9.62063 8.43604 9.49852 8.43604 9.37521C8.43604 9.2519 8.46036 9.12979 8.50762 9.0159C8.55489 8.902 8.62415 8.79855 8.71146 8.71146Z" fill="#ffffff" fill-opacity="0.6"></path>
			</svg>
		</button>
		</form>
		<section class="ftco-section">
			<div class="container">
				<div class="row justify-content-center">
					<div class="col-md-12 col-lg-12">
						<div class="wrap d-md-flex">
							<div class="img" style="background-image:url(/User/images/bg-1.jpg)" asp-append-version="true"></div>
							<div class="login-wrap p-4 p-md-3">
								<div class="d-flex">
									<div class="w-100">
										<h2 class="mb-4 text-center">Üzv olun</h2>
									</div>
									<div class="w-100">
										<p class="social-media d-flex justify-content-end">
											<a href="#" class="social-icon d-flex align-items-center justify-content-center">
												<span class="fa fa-facebook"></span>
											</a>
											<a href="#" class="social-icon d-flex align-items-center justify-content-center">
												<span class="fa fa-twitter"></span>
											</a>
										</p>
									</div>
								</div>
								<form method="post" asp-controller="Account" asp-action="Register" class="signin-form">
									<div asp-validation-summary="All"></div>
									<div class="form-group mb-3">
										<label class="label" for="name">İstifadəçi adı</label>
										<input asp-for="UserName" class="form-control" placeholder="İstifadəçi adınız">
										<span asp-validation-for="UserName"></span>
									</div>
									<div class="form-group mb-3">
										<label class="label" for="name">Email</label>
										<input asp-for="Email" class="form-control" placeholder="Email ünvanınız">
										<span asp-validation-for="Email"></span>
									</div>
									<div class="form-group mb-3">
										<label class="label">Şifrə</label>
										<input asp-for="Password" class="form-control"
											   placeholder="Şifrəniz">
										<span asp-validation-for="Password"></span>
									</div>
									<div class="form-group mb-3">
										<label class="label">Şifrə Təkrarı</label>
										<input asp-for="ConfirmPassword" class="form-control"
											   placeholder="Şifrənizi təkrarlayın">
										<span asp-validation-for="ConfirmPassword"></span>
									</div>
									<div class="form-group">
										<button type="submit" class="form-control btn btn-primary rounded submit px-3">
											Qeydiyyatı
											tamamla
										</button>
									</div>
									<div class="form-group d-md-flex">
										<div class="w-80 text-left">
											<label class="checkbox-wrap checkbox-primary mb-0">
												Bütün şərtləri və qaydaları qəbul edirəm.
												<input checked>
												<span class="checkmark"></span>
											</label>
										</div>
									</div>
								</form>
								<p class="text-center">Artıq üzvsünüz?<a asp-controller="Account" asp-action="Login"> Hesabınıza giriş edin</a></p>
							</div>
						</div>
					</div>
				</div>
			</div>
		</section>
		<script src="/User/js/jquery.min.js"></script>
		<script src="/User/js/popper.js"></script>
		<script src="/User/js/bootstrap.min.js"></script>
</body>

</html>



