@model ResetPasswordViewModel
<!DOCTYPE html>
<html lang="az">

<head>
	<title>Şifrə Sıfırlama</title>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

	<link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">
	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
	<link rel="stylesheet" href="/User/css/login-style.css" />
	<style>
		body {
			margin: 0;
			padding: 0;
		}
		.alert-section {
			padding: 25px;
			text-align: center;
			margin-bottom: 15px;
		}

		h2 {
			text-align: center;
			margin-bottom: 5px;
		}

		.form-container {
			text-align: center;
		}

		.form-group {
			width: 60%;
			margin: auto;
			margin-bottom: 10px;
			text-align: left;
		}

			.form-group label {
				display: block;
				margin-bottom: 5px;
			}

		.form-control {
			width: 100%; /* Full width of the container */
		}

		button {
			width: 30%;
			margin: auto;
			margin-top: 10px;
		}
	</style>
</head>

<body>
	<div class="alert-section">
		@if (TempData["reset-alert-message"] != null)
		{
			if (TempData["reset-alert-message"] == "Bu mail adresiylə uzlaşan istifadəçi tapıla bilmədi")
			{
				<div class="alert alert-danger">
					@TempData["reset-alert-message"]
				</div>
			}
			else if (TempData["reset-alert-message"] == "Şifrəniz dəyişdirildi")
			{
				<div class="alert alert-success">
					@TempData["reset-alert-message"]
				</div>
			}
		}
	</div>
	<h2>Şifrə Sıfırlama</h2>
	<div class="form-container">
		<hr />
		<form asp-action="ResetPassword" method="post" class="needs-validation">
			<input type="hidden" asp-for="Token" />
			<div asp-validation-summary="All" class="text-danger"></div>

			<div class="mb-3 form-group">
				<label asp-for="Email" class="form-label">Email adresiniz</label>
				<input asp-for="Email" placeholder="Email adresinizi girin." class="form-control" />
			</div>

			<div class="mb-3 form-group">
				<label asp-for="Password" class="form-label">Yeni şifrə</label>
				<input asp-for="Password" placeholder="Yeni şifrənizi girin." class="form-control" />
			</div>

			<div class="mb-3 form-group">
				<label asp-for="ConfirmPassword" class="form-label">Şifrə təkrarı</label>
				<input asp-for="ConfirmPassword" placeholder="Şifrənizi təkrarlayın." class="form-control" />
			</div>

			<button type="submit" class="btn btn-primary">Sıfırla</button>
		</form>
	</div>
	<script src="/User/js/jquery.min.js"></script>
	<script src="/User/js/popper.js"></script>
	<script src="/User/js/bootstrap.min.js"></script>
</body>

</html>
