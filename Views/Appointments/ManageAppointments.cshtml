@model AppointmentViewModel
@{
	ViewData["Title"] = "ManageAppointments";
	Layout = "~/Views/Shared/_Layout2.cshtml";
}
<style>
	td {
		color: rgb(142, 156, 156)
	}
</style>
<div id="page-wrapper">
	<div class="main-page">
		<div class="tables">
			<h3 class="title1">Rezerv görüntülə və idarə et</h3>
			<div class="table-responsive bs-example widget-shadow">
				<p style="font-size: 16px; color: red;" align="center"></p>
				<h4>Info:</h4>
				<table class="table table-bordered">
					<tr>
						<th>Növbə nömrəsi</th>
						<td >@Model.AppointmentObj.QueueNumber</td>
					</tr>
					<tr>
						<th>Adı və soyadı</th>
						<td>@($"{Model.AppointmentObj.CustomerName} {Model.AppointmentObj.CustomerSurname}")</td>
					</tr>
					<tr>
						<th>Email ünvanı</th>
						<td>@(Model.AppointmentObj.CustomerEmail)</td>
					</tr>
					<tr>
						<th>Telefon nömrəsi</th>
						<td>@Model.AppointmentObj.CustomerPhoneNumber</td>
					</tr>
					<tr>
						<th>Rezerv tarixi</th>
						<td>@(Model.AppointmentObj.AppointmentDate)</td>
					</tr>
					<tr>
						<th>Rezerv vaxtı</th>
						<td>@(Model.AppointmentObj.AppointmentTime)</td>
					</tr>
					<tr>
						<th>Servislər</th>
						<td>
							<!-- Iterate through and display services -->
							@Model.AppointmentObj.SelectedServices
						</td>
					</tr>
				</table>
				<form asp-action="ManageAppointments" method="post">
					@Html.HiddenFor(m => m.AppointmentObj.Id)
					<table class="table table-bordered">
						<tr>
							<th>Status :</th>
							<td>

								<select asp-for="AppointmentObj.Status" name="status" class="form-control wd-450">
									<option value="Gözləməkdə">Gözləməkdə</option>
									<option value="Təsdiq olunmuş">Təsdiq olunmuş</option>
									<option value="İmtina olunmuş">İmtina olunmuş</option>
								</select>
							</td>
						</tr>
						<tr align="center">
							<td colspan="2">
								<button style="width:60%;" type="submit" name="submit" class="btn btn-default">Təsdiq et</button>
							</td>
						</tr>
					</table>
				</form>
			</div>
		</div>
	</div>
</div>
